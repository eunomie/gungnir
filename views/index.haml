.row
  .col-xs-1
    - if @prev
      %a.btn{:href => "/#{@prev}"} < Previous
  .col-xs-6.col-xs-offset-2
    - if @current != 'master'
      Playback at
      = @current
  .col-xs-1.col-xs-offset-2
    - if @next
      %a.btn{:href => "/#{@next}"} Next >

%ul#todo-list.list-unstyled
  - @items.each do |item|
    %li{:id => item["id"]}
      %span.item
        - if item["done"]
          %del
            = item["content"]
        - else
          = item["content"]
      - if @current == 'master'
        %span.pull-right
          - if item["done"] == false
            %a.btn.done{:href => "/done/#{item["id"]}"}
              Done
          %a.btn.btn-danger{:href => "/delete/#{item["id"]}"} Delete
- if @current == 'master'
  %a.btn.btn-primary{:href => "/new"} Add todo item
